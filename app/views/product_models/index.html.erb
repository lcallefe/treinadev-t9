<h1>Modelos de produtos</h1>


<%if @product_models.any?%>
  <% @product_models.each do |pm|%>
    <div>
      <h2><%=pm.name%></h2>
      <dl>
        <dt> SKU</dt>
        <dd><%= pm.sku %></dd>

        <dt>Fornecedor </dt>
        <dd><%=pm.supplier.corporate_name%></dd>

        <dt> </dt>
        <dd></dd>

      </dl>

    </div>
  <% end %>
<% else %>
  <p>Nenhum modelo de produto cadastrado</p>
<% end %>

<td><%= link_to 'Voltar', root_path %></td>

